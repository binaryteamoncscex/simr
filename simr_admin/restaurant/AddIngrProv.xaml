<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="restaurant.AddIngrProv"
             Title="Add ingredient providers">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Provider name" Text="{Binding ProviderName}" />
        <Entry Placeholder="Provider email" Text="{Binding ProviderEmail}" Keyboard="Email" />
        <Button Text="Add Provider" Command="{Binding AddProviderCommand}" BackgroundColor="LightSkyBlue" />
    </VerticalStackLayout>
</ContentPage>
